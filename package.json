{
  "name": "ephoriax-site-clone",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"vite\"",
    "dev:frontend": "vite",
    "server:dev": "tsx watch server/index.ts",
    "server:start": "tsx server/index.ts",
    "build": "tsc -b && vite build && tsc -p tsconfig.server.json",
    "start": "NODE_ENV=production node dist-server/index.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "framer-motion": "^12.23.25",
    "jsdom": "^27.3.0",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.555.0",
    "openai": "^6.7.0",
    "pdf-lib": "^1.17.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.1",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.8.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vercel/node": "^5.4.1",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.27.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "pnpm": "^10.18.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "undici": "^7.16.0",
    "vercel": "^48.8.2",
    "vite": "^7.1.2"
  }
}
