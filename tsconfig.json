{
  "compilerOptions": {
    /* === Core Environment === */
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    /* === Strictness & Safety === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    /* === Paths & Types === */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    /* === React / JSX Support === */
    "jsx": "react-jsx",
    /* === Build Behavior === */
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true
  },
  /* === Project Structure === */
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "api/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}