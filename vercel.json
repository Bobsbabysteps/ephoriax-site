{
  "version": 2,
  "framework": "vite",
  "builds": [
    { "src": "vite.config.*", "use": "@vercel/static-build" },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}