{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "composite": true,
    "target": "ESNext",
    "module": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "api"
, "types"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}